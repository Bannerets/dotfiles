{
  "title": "personal",
  "rules": [
    {
      "description": "caps -> escape; shift-caps -> caps",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "caps_lock"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "escape"
          }
        }
      ]
    },
    {
      "description": "languages",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "en"
            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "ru"
            }
          }
        }
      ]
    },
    {
      "description": "alt+shift -> ctrl+space to switch languages",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "left_alt",
            "modifiers": [
              "left_shift"
            ]
          },
          "to_if_alone": {
            "key_code": "spacebar",
            "modifiers": [
              "left_control"
            ],
            "halt": true
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 3000
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "left_alt",
            "modifiers": [
              "left_shift"
            ]
          },
          "to_if_alone": {
            "key_code": "spacebar",
            "modifiers": [
              "left_control"
            ],
            "halt": true
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 3000
          }
        }
      ]
    },
    {
      "description": "extra mouse buttons",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": {
            "key_code": "close_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        }
      ]
    },
    {
      "description": "right_alt+arrows for page down / page up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "page_up"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "page_down"
          }
        }
      ]
    }
  ]
}
