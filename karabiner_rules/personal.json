{
  "title": "personal",
  "rules": [
    {
      "description": "caps",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "caps_lock"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "left_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "en"
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ru"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "left_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "ru"
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "en"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": {
            "key_code": "escape"
          }
        }
      ]
    },
    {
      "description": "languages",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "en"
            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "ru"
            }
          }
        }
      ]
    },
    {
      "description": "extra mouse buttons",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": {
            "key_code": "close_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        }
      ]
    },
    {
      "description": "right_alt+arrows for page down / page up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "page_up"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": {
            "key_code": "page_down"
          }
        }
      ]
    }
  ]
}
