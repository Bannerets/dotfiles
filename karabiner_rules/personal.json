{
  "title": "personal",
  "rules": [
    {
      "description": "caps -> escape; shift-caps -> caps",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": {
            "key_code": "caps_lock"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": {
            "key_code": "escape"
          }
        }
      ]
    },
    {
      "description": "languages",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "en"
            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": {
            "select_input_source": {
              "language": "ru"
            }
          }
        }
      ]
    },
    {
      "description": "alt+shift -> ctrl+space to switch languages",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "spacebar",
            "modifiers": [
              "left_control"
            ]
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 10000
          }
        }
      ]
    },
    {
      "description": "extra mouse buttons",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": {
            "key_code": "close_bracket",
            "modifiers": [
              "left_command"
            ]
          }
        }
      ]
    }
  ]
}
